@model Expenditure

<div>
    <form asp-controller="KeepAccount" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="Date">Date :</label>
            <span asp-validation-for="Date" class="text-danger"></span>
            <input asp-for="Date" type="date" class="form-control">
            <label asp-for="Name">Name :</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
            <label>Type :</label>
            <span asp-validation-for="Type" class="text-danger"></span>
            <select asp-for="Type" id="selectType" class="form-control" style="width: 100%;">
                <option selected disabled> Select </option>
                <option value="Food"> Food </option>
                <option value="Transportation"> Transportation </option>
                <option value="Entertainment"> Entertainment </option>
                <option value="Others"> Others </option>
            </select>
            <label asp-for="Amount">Amount :</label>
            <span asp-validation-for="Amount" class="text-danger"></span>
            <input asp-for="Amount" class="form-control">
            <label asp-for="Note">Note :</label>
            <span asp-validation-for="Note" class="text-danger"></span>
            <input asp-for="Note" class="form-control">
            <div style="padding: 5px 0;">
                <button class="btn btn-info">Add</button>
            </div>
        </div>
    </form>
</div>

<style>
    th, td {
        border-bottom: 1px solid #AAAAAA;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(window).load(function() {
            if (@Model !== null) {
                $('#selectType option[value=' + @Model.Type + ']').attr('selected', 'selected');
            }
        });
    </script>
}